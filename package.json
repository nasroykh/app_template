{
	"name": "app_template",
	"private": true,
	"version": "0.0.0",
	"packageManager": "pnpm@10.0.0",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"start": "turbo run start",
		"lint": "turbo run lint",
		"clean": "turbo run clean && rm -rf node_modules",
		"auth:generate": "cd apps/api && pnpm dlx @better-auth/cli generate --config src/config/auth.ts --output ../../packages/db/src/models/auth/schema.ts",
		"db:generate": "turbo run db:generate --filter=@repo/db",
		"db:migrate": "turbo run db:migrate --filter=@repo/db",
		"db:push": "turbo run db:push --filter=@repo/db"
	},
	"devDependencies": {
		"turbo": "^2.5.4"
	},
	"engines": {
		"node": ">=18"
	}
}
