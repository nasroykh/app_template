{
	"extends": "@repo/tsconfig/node.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"types": ["node"],
		"declaration": false,
		"declarationMap": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
