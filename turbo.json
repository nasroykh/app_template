{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["NODE_ENV", "CI"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"inputs": ["$TURBO_DEFAULT$", "../../.env", "../../.env.local"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["$TURBO_DEFAULT$"]
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false
		}
	}
}
